---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import SectionHeader from '../components/SectionHeader.astro';
import ContentGrid1 from '../components/ContentGrid1.astro';
import Sponsors from '../components/Sponsors.astro';
import Statistics from '../components/Statistics.astro';
import Speakers from '../components/Speakers.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="UX Copenhagen - Profile", meta_description="UX Copenhagen about us">
	<Header/>
	<SectionHeader section_title="What is UX Copenhagen?"/>
	<ContentGrid1/>
	<SectionHeader section_title="Sponsors"/>
	<Sponsors/>
	<Statistics/>
	<Speakers/>
	<Footer/>
</Layout>

<style>
section {
	width: calc(70% + 60px);
	margin: 30px auto;
	display: grid;
	grid-template-columns: 1fr 1fr 1fr 1fr;
	align-content: center;
	gap: 30px;
}
</style>
